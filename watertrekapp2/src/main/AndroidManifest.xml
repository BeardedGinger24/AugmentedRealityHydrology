<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.calstatela.jplone.watertrekapp2">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/app_ico_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_ico_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".activities.SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".activities.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".activities.CredentialsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.DetailsActivity" android:screenOrientation="portrait"/>

    </application>
</manifest>