<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.calstatela.jplone.watertrekapp.activities.MainActivity">


    <!-- This layout is where the ARView will go -->
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/bearingL"-->
            <!--android:text="BEARINGLEFT"/>-->
        <FrameLayout
            android:id="@+id/ar_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <!-- transparent layer on top of ar view fixes the drawer -->
        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"/>
    </RelativeLayout>



    <!-- This layout allows the Menu Button to be placed on top of AR View -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:onClick="onMenuButtonClicked"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gear_settings" />



        <TextView
            android:id="@+id/bearingR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/menu_button"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:shadowColor="#000000"
            android:shadowRadius="3"
            android:text="BEARING-LEFT"
            android:textColor="@android:color/holo_red_light"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bearingL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:shadowColor="#000000"
            android:shadowRadius="3"
            android:text="BEARING-RIGHT"
            android:textColor="@android:color/holo_red_light"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/obstruction_view_button"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/eye24v"
            android:onClick="obstructionClicked"
            android:shadowColor="@color/white"
            android:shadowRadius="6"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_add_black_24dp" />

        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:arc="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/popup"
                android:layout_gravity="center"/>

            <com.bvapp.arcmenulibrary.ArcMenu
                android:id="@+id/arcMenuX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:visibility="visible"
                arc:menuChildAnim="false"
                arc:menuChildSize="48dp"
                arc:menuClickAnim="true"
                arc:menuGravity="Bottom_Right"
                arc:menuNormalColor="@color/colorPrimary"
                arc:menuShadowElevation="true"
                arc:menuImage="@drawable/gear_settings"
                arc:menuType="normal"></com.bvapp.arcmenulibrary.ArcMenu>>
        </FrameLayout>

        <!-- sensor views -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:layout_width="25dp"
                android:layout_height="145dp"
                android:id="@+id/Azimuth_RecyclerView"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="#AA4f4e4d"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="25dp"
                android:layout_height="145dp"
                android:id="@+id/Pitch_RecyclerView"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="#AA4f4e4d">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Azimuth"
                android:textColor="@android:color/white"
                android:layout_above="@+id/Azimuth_RecyclerView"
                android:paddingBottom="2dp"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pitch"
                android:textColor="@android:color/white"
                android:layout_above="@+id/Pitch_RecyclerView"
                android:layout_alignParentRight="true"
                android:paddingBottom="2dp"
                android:layout_marginRight="11dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AzimuthNum"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="0.0"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@+id/Azimuth_RecyclerView"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PitchNum"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/Pitch_RecyclerView"
                android:text="0.0"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/constraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <ImageButton
                android:id="@+id/imageButton_Well"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:onClick="toggleWell"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:srcCompat="@drawable/well_res_ico_clr" />

            <ImageButton
                android:id="@+id/imageButton_Reservoir"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:onClick="toggleReservoir"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:srcCompat="@drawable/reservoir_res_ico_clr" />

            <ImageButton
                android:id="@+id/imageButton_River"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:onClick="toggleRiver"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/river_res_ico_clr" />

            <ImageButton
                android:id="@+id/imageButton_Soil_Moisture"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:onClick="toggleSoil"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/soil_bb_icon" />

            <ImageButton
                android:id="@+id/imageButton_Mountain"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:onClick="toggleMountain"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/mtn_res_ico_clr" />
        </LinearLayout>


        <android.support.constraint.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>

    <!-- Left Drawer -->
    <RelativeLayout
        android:id="@+id/whatYouWantInLeftDrawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">


        <View
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDarkTrans" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:text="@string/settings"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:text="@string/showResources"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/mtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="130dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mtn_res_ico_clr" />

        <ImageView
            android:id="@+id/reservoir"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="185dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/reservoir_res_ico_clr" />

        <ImageView
            android:id="@+id/well"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="240dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/well_res_ico_clr" />

        <ImageView
            android:id="@+id/river"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="295dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/river_res_ico_clr" />

        <ImageView
            android:id="@+id/soil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="350dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/grass_res_ico_clr" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="10dp"
            android:text="@string/range"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/switch8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="140dp"
            android:text="@string/mountains"
            android:onClick="toggleMountain"
            android:textColor="@color/white"/>

        <Switch
            android:id="@+id/switch11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="195dp"
            android:text="@string/reservoirs"
            android:onClick="toggleReservoir"
            android:textColor="@color/white"/>

        <Switch
            android:id="@+id/switch9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="250dp"
            android:text="@string/wells"
            android:onClick="toggleWell"
            android:checked="false"
            android:textColor="@color/white"/>

        <Switch
            android:id="@+id/switch10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="305dp"
            android:text="@string/rivers"
            android:onClick="toggleRiver"
            android:textColor="@color/white"/>

        <Switch
            android:id="@+id/switch12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="360dp"
            android:text="@string/soilMoisture"
            android:onClick="toggleSoil"
            android:textColor="@color/white"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp">

            <SeekBar
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"

                android:max="4"
                android:progress="3" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:text="5"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="30dp"/>
                <TextView
                    android:text="10"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"/>
                <TextView
                    android:text="15"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"/>
                <TextView
                    android:text="20"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="30dp"/>
                <TextView
                    android:text="25"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="20dp"/>


            </LinearLayout>



        </LinearLayout>

        <!-- you can have many more widgets here like buttons or labels -->


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="500dp"
            android:text="Logout"
            android:onClick="logout"
            android:textColor="@color/green"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="500dp"
            android:text="Login"
            android:onClick="login"
            android:textColor="@color/green"/>
            <Button
                android:id="@+id/mesh_demo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="500dp"
                android:text="MeshDemo"
                android:onClick="meshDemo"
                android:textColor="@color/green"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>